{% extends "base.html.twig" %}

{% block body %}
    <h2>{{ article.title }}  </h2>
    <p>{{ article.content }}</p>
    <br>

    {% if article.author %}
        Par: <a href="{{ path('user_show', {'id': article.author.id}) }}">{{ article.author.name }}</a>
    {% endif %}

    <br>

    {% for category in article.categories %}
        <span class="label label-success"><a href="{{ path('category_show', {'id': category.id}) }}">{{ category.name }}</a></span>
    {% endfor %}
    <br>
    {% if prec %}
        <a href="{{ path('app_article_show', {'id': prec}) }} ">Précédant</a>
    {% endif %}
    &nbsp;&nbsp;
    {% if suiv %}
        <a href="{{ path('app_article_show', {'id': suiv}) }}">Suivant</a>
    {% endif %}
{% endblock %}
