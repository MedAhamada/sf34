{# app/Resources/views/user/index.html.twig #}
{% extends "base.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('user_new') }}" class="btn btn-primary pull-right">Add</a>
        </div>
        <div class="col-md-12">

            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
                            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-success">Show</a>
                            <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {% else %}
                    <p>No user in the database</p>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}